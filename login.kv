<LoginScreen>:
    GridLayout:
        rows: 2
        MDToolbar:
            id: toolbar
            title: "Login"
            md_bg_color: app.theme_cls.primary_color
            background_palette: 'Primary'
            background_hue: '500'
            elevation: 10
            right_action_items: [['dots-vertical', lambda x: ""]]

        GridLayout:
            rows: 3
            orientation: 'vertical'
            padding: [10,50,10,50]
            BoxLayout:
                orientation: "vertical"
                AsyncImage:
                    halign: "center"
                    source: "raw_potato.jpg"
                MDLabel:
                    font_name: "Cursive"
                    text: "Welcome"
                    halign: "center"
                    font_size: sp(50)
            GridLayout:
                cols: 1
                orientation: "vertical"
                padding: [20,0,20,0]
                spacing: 10
                MDTextField:
                    id: alias
                    hint_text: "Username"
                    multiline: False
                    write_tab: False

                MDTextField:
                    id: pwd
                    hint_text: "Password"
                    multiline: False
                    password_mask: "#"
                    password: True
                    write_tab: False

                GridLayout:
                    cols: 3
                    Widget:
                    MDRaisedButton:

                        text:"Proceed"
                        on_release: root.login(alias.text, pwd.text)
                    Widget:
